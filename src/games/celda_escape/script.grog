# Main script

main:
	init:
		
		.set jaula_esta_abierta=false
		.set adoquin_ya_cayo=false
		.set oficina_fue_descubierta=false
		.set llave1_fue_agarrada=false
		
		jaula_a_oficina.disable
		adoquin.disable
		
		if $stage < 2:
			.load_room jaula at=posicion/inicial
			.set music=jaula
			.curtain_up
			
			if $stage = 0:
				
				# ... intro goes here
				.say INTRO
				
			else:
				
				inv_libro.add
				inv_calavera.add
				inv_llave2.add
				inv_frasco.add
				inv_llave1.add
		else:
			
			poster.disable
			jaula_a_oficina.enable
			jaula_a_oficina.play open
			inv_poster.add
			.set adoquin_ya_cayo=true
			.set oficina_fue_descubierta=true
			
			palo.disable
			inv_palo.add
			
			# Etapa oficina
			if $stage = 2:
				.load_room oficina at=posicion/de_jaula
				.set music=oficina
				.curtain_up
			
			# Etapa living
			elif $stage = 3:
				.load_room living at=posicion/de_oficina
				.set music=oficina
				.curtain_up
			
			else:
				.set llave1_fue_agarrada=true
				inv_llave1.add
				cajita.play open
				
				# Etapa jaula abierta
				if $stage = 4:
					.load_room jaula_abierta at=posicion/de_oficina
					.set music=jaula
					.curtain_up
				
				# Etapa sótano
				elif $stage = 5:
					.load_room sotano at=posicion/de_jaula
					.set music=jaula
					.curtain_up
				
				# Etapa laboratorio
				elif $stage = 6:
					.load_room laboratorio at=posicion/de_sotano
					.set music=lab
					.curtain_up
				
				# ...

