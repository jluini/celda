# Items jaula

inodoro:
	look:
		you.say LOOK_TOILET
	
	hand:
		you.say "TODO"
	
	usar_con(inv_palo):
		you.say BAD_IDEA
	
	usar_con(inv_llave*):
		you.say USE_KEY_WITH_TOILET1
		you.say USE_KEY_WITH_TOILET2
	
	usar_con(inv_frasco):
		you.say USE_FLASK_WITH_TOILET
	
	usar_con(inv_poster):
		you.say USE_POSTER_WITH_TOILET
	
	usar_con(*):
		you.say USE_X_WITH_TOILET

cama:
	look:
		you.say LOOK_BED
	
	hand:
		you.say "TODO"
	
	usar_con(inv_palo):
		you.say SAY_NO
	
	usar_con(inv_llave*):
		you.say USE_KEY_WITH_BED
	
	usar_con(inv_frasco):
		you.say FOR_WHAT
	
	usar_con(*): TK
		you.say INVALID_COMBINATION

poster:
	look:
		you.say LOOK_POSTER
	
	hand:
		self.disable
		inv_poster.add
		
		if $adoquin_ya_cayo:
			jaula_a_oficina.enable
			jaula_a_oficina.play opening blocking=true
			jaula_a_oficina.play open
		else:
			adoquin.enable
		
	# TODO usar_con(inv_palo): "No le haría daño" ?
	
	usar_con(*):
		you.say INVALID_COMBINATION

adoquin:
	look:
		you.say LOOK_COBBLE
	
	hand:
		you.say "TODO"
	
	usar_con(inv_poster):
		self.disable
		tool.remove
		poster.enable
	
	usar_con(inv_palo):
		you.say USE_STICK_WITH_COBBLE
		self.disable
		.set adoquin_ya_cayo=true
		
		jaula_a_oficina.enable
		jaula_a_oficina.play opening blocking=true
		jaula_a_oficina.play open

jaula_a_oficina:
	walk_to:
		.load_room oficina at=posicion/de_jaula
		
		if not $oficina_fue_descubierta:
			.set oficina_fue_descubierta=true
			.set music=office
			#.curtain_up
			you.say "Mirá vo el cacho de oficina" # TODO
	
	usar_con(inv_poster):
		self.play closing blocking=true
		self.play default
		self.disable
		poster.enable
		tool.remove

palo:
	look:
		you.say LOOK_CAGE_STICK
	
	hand:
		self.disable
		inv_palo.add

reja:
	look:
		you.say LOOK_BARS
	
	hand:
		you.say "TODO"
	
	usar_con(inv_palo):
		you.say "TODO ruido metal contra metal"
	
	usar_con(inv_llave1):
		if not $jaula_esta_abierta:
			.set music=""
			you.say USE_KEY_WITH_BARS
			.set music="uajari"
			.set jaula_esta_abierta=true
			.load_room jaula_abierta at=posicion/abriendo_reja
		else:
			you.say USE_KEY_WITH_BARS_AGAIN
		
	usar_con(inv_llave*):
		you.say WRONG_KEY
	
	usar_con(inv_frasco):
		you.say NOT_A_GOOD_IDEA
	
	usar_con(*):
		if not $jaula_esta_abierta:
			you.say CANT_OPEN_IT_WITH_THIS
		else:
			you.say FOR_WHAT

puerta_jaula:
	look:
		if not $jaula_esta_abierta:
			you.say CANT_REACH_DOOR
		else:
			you.say "TODO"
	
	hand:
		if not $jaula_esta_abierta:
			you.say CANT_REACH_DOOR
		else:
			you.say TRY_TO_OPEN_CAGE_DOOR
		
	usar_con(inv_llave*):
		if not $jaula_esta_abierta:
			you.say CANT_REACH_DOOR
		else:
			you.say WRONG_KEY
	
	usar_con(*):
		if not $jaula_esta_abierta:
			you.say CANT_REACH_DOOR
		else:
			you.say CANT_OPEN_IT_WITH_THIS

