# Items jaula

inodoro:
	mirar:
		you.say MIRAR_INODORO
	
	mano:
		you.say "TODO"
	
	usar_con(inv_palo):
		you.say MALA_IDEA
	
	usar_con(inv_llave*):
		you.say LLAVE_EN_INODORO1
		you.say LLAVE_EN_INODORO2
	
	usar_con(inv_frasco):
		you.say FRASCO_EN_INODORO
	
	usar_con(inv_poster):
		you.say POSTER_EN_INODORO
	
	usar_con(*):
		you.say X_EN_INODORO

cama:
	mirar:
		you.say MIRAR_CAMA
	
	mano:
		you.say "TODO"
	
	usar_con(inv_palo):
		you.say DECIR_NO
	
	usar_con(inv_llave*):
		you.say NO_PARECE_ABRIRSE_CON_LLAVE
	
	usar_con(inv_frasco):
		you.say PARA_QUE
	
	usar_con(*): TK
		you.say COMBINACION_INVALIDA

poster:
	mirar:
		you.say MIRAR_POSTER
	
	mano:
		self.disable
		inv_poster.add
		
		if $adoquin_ya_cayo:
			jaula_a_oficina.enable
			jaula_a_oficina.play opening blocking=true
			jaula_a_oficina.play open
		else:
			adoquin.enable
		
	# TODO usar_con(inv_palo): "No le haría daño" ?
	
	usar_con(*):
		you.say COMBINACION_INVALIDA

adoquin:
	mirar:
		you.say MIRAR_ADOQUIN
	
	mano:
		you.say "TODO"
	
	usar_con(inv_poster):
		self.disable
		tool.remove
		poster.enable
	
	usar_con(inv_palo):
		you.say PALO_EN_ADOQUIN
		self.disable
		.set adoquin_ya_cayo=true
		
		jaula_a_oficina.enable
		jaula_a_oficina.play opening blocking=true
		jaula_a_oficina.play open

jaula_a_oficina:
	ir:
		.load_room oficina at=posicion/de_jaula
		#.curtain_up
		.set music=oficina
		
		if not $oficina_fue_descubierta:
			.set oficina_fue_descubierta=true
			you.say "Mirá vo el cacho de oficina" # TODO
	
	usar_con(inv_poster):
		self.play closing blocking=true
		self.play default
		self.disable
		poster.enable
		tool.remove

palo:
	mirar:
		you.say MIRAR_PALO
	
	mano:
		self.disable
		inv_palo.add

reja:
	mirar:
		you.say MIRAR_REJA
	
	mano:
		you.say "TODO"
	
	usar_con(inv_palo):
		you.say "TODO ruido metal contra metal"
	
	usar_con(inv_llave1):
		if not $jaula_esta_abierta:
			you.say LLAVE_EN_REJA
			.set jaula_esta_abierta=true
			.load_room jaula_abierta at=posicion/abriendo_reja
		else:
			you.say LLAVE_EN_REJA_OTRA_VEZ
		
	usar_con(inv_llave*):
		you.say NO_ES_LA_LLAVE_CORRECTA
	
	usar_con(inv_frasco):
		you.say NO_ES_BUENA_IDEA
	
	usar_con(*):
		if not $jaula_esta_abierta:
			you.say NO_PUEDO_ABRIRLA_CON_ESTO
		else:
			you.say PARA_QUE

puerta_jaula:
