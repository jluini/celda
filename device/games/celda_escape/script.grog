# Main script

main:
	init:
		# cage setup
		.set door_seen=false
		.set poster_was_taken=false
		cage/to_office.disable
		
		
		
		if $stage < 2:
			.load_room cage at=positions/initial
			.set music=celda
			.curtain_up
			
			if $stage = 0:
				
				# ... intro goes here
			
			else:
				
				inv_stick.add
				inv_book.add
				inv_key1.add
				inv_skull.add
				inv_book.add
				inv_flask.add
		else:
			
			.set poster_was_taken = true
			cage/poster.disable
			inv_poster.add
			cage/to_office.enable
			
			
			# office stage
			if $stage = 2:
				.load_room office at=positions/from_cage
				.set music=office
				.curtain_up
			
			# living stage
			elif $stage = 3:
				.load_room living at=positions/from_office
				.set music=office
				.curtain_up
			
			# cage-open stage
			elif $stage = 4:
				.load_room cage_open at=positions/from_office
				.set music=uajari
				.curtain_up
			
			# cellar stage
			elif $stage = 5:
				.load_room cellar at=positions/from_cage
				.set music=lab
				.curtain_up
			
			# lab stage
			elif $stage = 6:
				.load_room lab at=positions/from_cellar
				.set music=lab
				.curtain_up
			
			# ...

